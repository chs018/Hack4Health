{
  "project": {
    "name": "Tamil Poetry Emotion-Rasa Classifier",
    "version": "1.0.0",
    "description": "NLP system for classifying emotions in Tamil poetry and mapping to Navarasa categories",
    "author": "AI + Full Stack Engineer",
    "license": "MIT"
  },
  "model": {
    "name": "IndicBERT",
    "source": "ai4bharat/indic-bert",
    "task": "sequence_classification",
    "num_labels": 10,
    "max_length": 128
  },
  "training": {
    "epochs": 10,
    "batch_size": 8,
    "learning_rate": 2e-5,
    "warmup_steps": 50,
    "weight_decay": 0.01,
    "early_stopping_patience": 3
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "title": "Tamil Poetry Emotion-Rasa Classifier API",
    "version": "1.0.0"
  },
  "dashboard": {
    "title": "Tamil Poetry Emotion Classifier",
    "port": 8501,
    "theme": "light"
  },
  "paths": {
    "data": "data/primary_emotions.csv",
    "models": "models/emotion_model",
    "logs": "logs"
  },
  "emotions": [
    "Love",
    "Joy",
    "Sorrow",
    "Anger",
    "Courage",
    "Pride",
    "Confidence",
    "Fear",
    "Caution",
    "Disgust",
    "Betrayal",
    "Wonder",
    "Clarity",
    "Wisdom",
    "Calmness",
    "Contentment",
    "Reverence",
    "Devotion",
    "Gratitude"
  ],
  "rasas": [
    "Shringara",
    "Hasya",
    "Karuna",
    "Raudra",
    "Veera",
    "Bhayanaka",
    "Bibhatsa",
    "Adbhuta",
    "Shanta",
    "Bhakti"
  ]
}
